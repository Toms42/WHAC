<?xml version="1.0"?>
<robot name="turtlebot_hardware" xmlns:xacro="http://ros.org/wiki/xacro">
    <property name="M_PI" value="3.14159"/>

    <!-- Macro for TurtleBot body. Including Gazebo extensions, but does not include Kinect -->
    <xacro:include filename="$(find whac_description)/urdf/gazebo.urdf.xacro"/>


    <property name="base_x" value="0.33"/>
    <property name="base_y" value="0.33"/>


    <xacro:macro name="turtlebot_body">
        <material name="GreenTB">
            <color rgba="0.0 0.8 0.0 1.0"/>
        </material>

        <!-- base_footprint is a fictitious link(frame) that is on the ground right below base_link origin, navigation stack depends on this frame -->

        <link name="base_footprint">
            <inertial>
                <mass value="0.0001"/>
                <origin xyz="0 0 0"/>
                <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                         iyy="0.0001" iyz="0.0"
                         izz="0.0001"/>
            </inertial>

            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.001 0.001 0.001"/>
                </geometry>
                <material name="GreenTB"/>
            </visual>

            <collision>
                <origin xyz="0 0 0.017" rpy="0 0 0"/>
                <geometry>
                    <box size="0.001 0.001 0.001"/>
                </geometry>
            </collision>
        </link>

        <link name="base_link">
            <inertial>
                <mass value="10.0"/>
                <origin xyz="0 0 0.0"/>
                <inertia ixx="0.01" ixy="0.0" ixz="0.0"
                         iyy="0.01" iyz="0.0" izz="0.5"/>
            </inertial>

            <visual>
                <origin xyz=" 0 0 0.0308" rpy="0 0 0"/>
                <geometry>
                    <cylinder length="0.0611632" radius="0.016495"/>
                </geometry>
            </visual>

            <collision>
                <origin xyz="0.0 0.0 0.0308" rpy="0 0 0"/>
                <geometry>
                    <cylinder length="0.0611632" radius="0.016495"/>
                </geometry>
            </collision>
        </link>


        <joint name="base_footprint_joint" type="fixed">
            <origin xyz="0 0 0.017" rpy="0 0 0"/>
            <parent link="base_footprint"/>
            <child link="base_link"/>
        </joint>

        <joint name="laser_joint" type="fixed">

            <!-- correct values for rpy are ${M_PI} 0 0 (real laser is upside down), but then gmapping doesn't work -->
            <origin xyz="0.26 0 0.025" rpy="0 0 0"/>

            <parent link="base_link"/>
            <child link="laser"/>
        </joint>

        <link name="laser">

            <visual>
                <origin xyz="0 0 0.05" rpy="0 0 0"/>
                <geometry>
                    <box size="0.1 0.1 0.15"/>
                </geometry>
                <material name="blue">
                    <color rgba="0 0 .8 1"/>
                </material>
            </visual>

            <collision>
                <origin xyz="0 0 0.05" rpy="0 0 0"/>
                <geometry>
                    <box size="0.1 0.1 0.15"/>
                </geometry>
            </collision>

            <inertial>
                <mass value="0.5"/>
                <origin xyz="0 0 0.05"/>
                <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                         iyy="0.0001" iyz="0.0"
                         izz="0.0001"/>
            </inertial>
        </link>

        <gazebo reference="laser">
            <material value="Gazebo/Blue"/>
        </gazebo>

        <gazebo reference="laser">
            <selfCollide>false</selfCollide>
            <turnGravityOff>false</turnGravityOff>
        </gazebo>



        <link name="front_left_wheel_link">
            <inertial>
                <origin xyz="0 0 0"/>
                <mass value="0.01"/>
                <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                         iyy="0.001" iyz="0.0" izz="0.001"/>
            </inertial>

            <visual>
                <origin xyz="0 0 0" rpy="0 ${M_PI/2} ${M_PI/2}"/>
                <geometry>
                    <cylinder radius="0.033" length="0.023"/>
                </geometry>
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="0 ${M_PI/2} ${M_PI/2}"/>
                <geometry>
                    <cylinder radius="0.033" length="0.023"/>
                </geometry>
            </collision>
        </link>

        <joint name="front_left_wheel_joint" type="continuous">
            <origin xyz="0.1 0.13 0.015" rpy="0 0 0"/>
            <parent link="base_link"/>
            <child link="front_left_wheel_link"/>
            <axis xyz="0 1 0"/>
            <anchor xyz="0 0 0"/>
            <limit effort="100" velocity="100"/>
            <!--joint_properties damping="0.0" friction="0.0" /-->
        </joint>

        <link name="front_right_wheel_link">
            <inertial>
                <origin xyz="0 0 0"/>
                <mass value="0.01"/>
                <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                         iyy="0.001" iyz="0.0" izz="0.001"/>
            </inertial>

            <visual>
                <origin xyz="0 0 0" rpy="0 ${M_PI/2} ${M_PI/2}"/>
                <geometry>
                    <cylinder radius="0.033" length="0.023"/>
                </geometry>
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="0 ${M_PI/2} ${M_PI/2}"/>
                <geometry>
                    <cylinder radius="0.033" length="0.023"/>
                </geometry>
            </collision>
        </link>

        <joint name="front_right_wheel_joint" type="continuous">
            <origin xyz="0.1 -0.13 0.015" rpy="0 0 0"/>
            <parent link="base_link"/>
            <child link="front_right_wheel_link"/>
            <axis xyz="0 1 0"/>
            <anchor xyz="0 0 0"/>
            <limit effort="100" velocity="100"/>
            <!--dynamics damping="0.0" friction="0.0" /-->
        </joint>


        <link name="back_left_wheel_link">
            <inertial>
                <origin xyz="0 0 0"/>
                <mass value="0.01"/>
                <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                         iyy="0.001" iyz="0.0" izz="0.001"/>
            </inertial>

            <visual>
                <origin xyz="0 0 0" rpy="0 ${M_PI/2} ${M_PI/2}"/>
                <geometry>
                    <cylinder radius="0.033" length="0.023"/>
                </geometry>
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="0 ${M_PI/2} ${M_PI/2}"/>
                <geometry>
                    <cylinder radius="0.033" length="0.023"/>
                </geometry>
            </collision>
        </link>

        <joint name="back_left_wheel_joint" type="continuous">
            <origin xyz="-0.1 0.13 0.015" rpy="0 0 0"/>
            <parent link="base_link"/>
            <child link="back_left_wheel_link"/>
            <axis xyz="0 1 0"/>
            <anchor xyz="0 0 0"/>
            <limit effort="100" velocity="100"/>
            <!--joint_properties damping="0.0" friction="0.0" /-->
        </joint>

        <link name="back_right_wheel_link">
            <inertial>
                <origin xyz="0 0 0"/>
                <mass value="0.01"/>
                <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                         iyy="0.001" iyz="0.0" izz="0.001"/>
            </inertial>

            <visual>
                <origin xyz="0 0 0" rpy="0 ${M_PI/2} ${M_PI/2}"/>
                <geometry>
                    <cylinder radius="0.033" length="0.023"/>
                </geometry>
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="0 ${M_PI/2} ${M_PI/2}"/>
                <geometry>
                    <cylinder radius="0.033" length="0.023"/>
                </geometry>
            </collision>
        </link>

        <joint name="back_right_wheel_joint" type="continuous">
            <origin xyz="-0.1 -0.13 0.015" rpy="0 0 0"/>
            <parent link="base_link"/>
            <child link="back_right_wheel_link"/>
            <axis xyz="0 1 0"/>
            <anchor xyz="0 0 0"/>
            <limit effort="100" velocity="100"/>
            <!--dynamics damping="0.0" friction="0.0" /-->
        </joint>



        <!-- Simulation sensors -->
        <whac_sim_laser/>
        <whac_sim_create/>

    </xacro:macro>

</robot>
